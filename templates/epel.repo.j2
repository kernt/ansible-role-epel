gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-EPEL-{{ epel_rel }}
gpgcheck=1

[epel-source]
name=Extra Packages for Enterprise Linux {{ epel_rel }} - $basearch - Source
#baseurl=http://download.fedoraproject.org/pub/epel/{{ epel_rel }}/SRPMS
metalink=https://mirrors.fedoraproject.org/metalink?repo=epel-source-{{ epel_rel }}&arch=$basearch
failovermethod=priority
