[epel]
name=Extra Packages for Enterprise Linux {{ epel_rel }} - $basearch
#baseurl=http://download.fedoraproject.org/pub/epel/{{ epel_rel }}/$basearch
metalink=https://mirrors.fedoraproject.org/metalink?repo=epel-{{ epel_rel }}&arch=$basearch
failovermethod=priority
enabled={{ '1' if epel_repos.epel is defined and epel_repos.epel else '0' }}
gpgcheck=1
gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-EPEL-{{ epel_rel }}

[epel-debuginfo]
name=Extra Packages for Enterprise Linux {{ epel_rel }} - $basearch - Debug
#baseurl=http://download.fedoraproject.org/pub/epel/{{ epel_rel }}/$basearch/debug
metalink=https://mirrors.fedoraproject.org/metalink?repo=epel-debug-{{ epel_rel }}&arch=$basearch
failovermethod=priority
